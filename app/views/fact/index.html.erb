<title>Welcome to our wonderful domain!</title>
<meta name="description" content="A desciption of our website and introduction.">
<%= stylesheet_link_tag('application') %>
<%= render(:partial => "default")%>

<% if session[:user_id] && session[:username] == 'admin' %>
  <%= flash[:notice] %>
  <div class="admin">
    <span>
        <h3>Upload Constellations</h3>
    </span>
  </div>
<% end %>

<div id="constellList">
  <span>
    <h2>Constellations</h2>
  </span>
  <table>
    <thead>
      <tr>
        <th>Constellation</th>
        <th>Abbreviation</th>
        <th>Family</th>
        <th>Origin</th>
        <th>Meaning</th>
        <th>Brightest Star</th>
        <th>Image URL</th>
      </tr>
    </thead>
    <tbody>
      <% @facts.each do |fact| %>
      <tr>
        <td><%= fact.constellation %></td>
        <td><%= fact.abbreviation %></td>
        <td><%= fact.family %></td>
        <td><%= fact.origin %></td>
        <td><%= fact.meaning %></td>
        <td><%= fact.brightest-star %></td>
        <td><%= fact.image %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
