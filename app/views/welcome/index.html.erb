<%= error_messages_for(@user) %>

<title>Welcome to our wonderful domain!</title>
<meta name="description" content="A desciption of our website and introduction.">
<%= stylesheet_link_tag('application') %>
<%= render(:partial => "default")%>

<p>Current Date is: <%= Time.now.month%>-<%= Time.now.day%>-<%= Time.now.year%></p>
<p>Current Time is: <%= sprintf("%02d",Time.now.hour%12)%>:
  <%= sprintf("%02d",Time.now.min)%>
  <%if Time.now.hour/12 >= 1%>
    <%= "pm"%>
  <%else%>
    <%= "am"%>
  <%end%>

  <% if !flash[:notice].blank? %>
      <p><%= flash[:notice] %></p>
  <%end%>
<div class="star_container"></div>
<ul>
<script>getStar()</script>
</ul>

</body>
</div>

<script>
function getStar(){
$.getJSON('http://star-api.herokuapp.com/api/v1/stars/Sun', function(data){
  var items = [];
  $.each(data, function(key, val) {
      items.push(key + " ");
      items.push(val);
      $(".star_container").append("<li style='list-style-type: none;'>"+items+"</li>");
      items = [];
  });
});
}
</script>
